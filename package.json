{
  "name": "telebot-stocrm",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n BOT,SERVER,WEB \"pnpm --filter ./apps/bot dev\" \"pnpm --filter ./apps/server dev\" \"pnpm --filter ./apps/web dev\"",
    "dev:bot": "pnpm --filter ./apps/bot dev",
    "dev:server": "pnpm --filter ./apps/server dev",
    "dev:web": "pnpm --filter ./apps/web dev"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^9.1.0"
  }
}